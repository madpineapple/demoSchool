@{
    ViewData["Title"] = "Update Student";
}

@model List<schoolDataMngmt.studentModel>
<div class="text-center">
    <h1 class="display-4">Update</h1>
    @foreach (var student in Model)
    {
<form method="post" action="/Student/UpdateStudent" >
    <input type="text" id="StudentId" name="StudentId" value="@student.StudentId" />
    <br />
    <label>First Name</label>
    <input type="text" id="fname" name="fname" value="@student.fname" />
    <br />
    <label>Last Name</label>
    <input type="text" id="lname" name="lname" value="@student.lname" />
    <br />
    <label>Date of Enrollment</label>
    <input type="text" id="dateOfEnrollment" name="dateOfEnrollment" value="@student.dateOfEnrollment" />
    <br />
   
    <label>Age</label>
    <input type="text" id="age" name="age" value="@student.age" />
    <br />
    <label>Grade</label>
    <input type="text" id="grade" name="grade" value="@student.grade" />
    <br />
    <label>GPA</label>
    <input type="text" id="GPA" name="GPA" value="@student.GPA" />
    <br />
    <input type="submit" value="Update" />
</form>
    }
  
</div>