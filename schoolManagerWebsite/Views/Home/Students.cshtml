@{
    ViewData["Title"] = "Students";  
}

<h1>Student Data</h1>

@Html.DropDownList("Options", null, new { onchange = "document.location='/Home/Students?value='+ this.value;" })

@if (ViewBag.Value == 1)
{
    <table class="table">
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>DOE</th>
            <th>Age</th>
            <th>Grade</th>
            <th>Pass</th>
        </tr>
        @foreach (var student in ViewBag.Students)
        {
            <tr>
                <td>@student.StudentId</td>
                <td>@student.fname</td>
                <td>@student.lname</td>
                <td>
                    @student.dateOfEnrollment
                </td>
                <td>@student.age</td>
                <td>@student.grade</td>
                @if (student.passing == true)
                {
                    <td>Passing</td>
                }
                else
                {
                    <td>Failing</td>
                }

            </tr>
        }

    </table>
}
else if (ViewBag.Value == 2)
{
    <table class="table">
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Expertise</th>
            <th>Age</th>
            <th>Date of Hire</th>         
        </tr>
        @foreach (var teacher in ViewBag.Teachers)
        {
            <tr>
                <td>@teacher.TeacherId</td>
                <td>@teacher.fname</td>
                <td>@teacher.lname</td>
                <td>
                    @teacher.expertise
                </td>
                <td>@teacher.age</td>
                <td>@teacher.dateOfHire</td>            
            </tr>
        }
    </table>
}
else
{
    <h3>@ViewBag.Value</h3>
}
<br />

<h3>Chart</h3>
<div Style="font-family: Corbel; font-size: small ;text-align:center " class="row">
    <div id="chartContainer" style="width:100%;height:100%">
        <canvas id="myChart" style="padding: 0;margin: auto;display: block; "> </canvas>
    </div>
    <script>
        var arr = @Html.Raw(Json.Serialize(ViewBag.Authors));
       
        var ctx = document.getElementById('myChart').getContext('2d');

        var barChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: arr,
                datasets: [{
                    label: "Bar Chart Example",
                    data: [12, 13],
                    backgroundColor: ['rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                        'rgba(255, 0, 0)',
                        'rgba(0, 255, 0)',
                        'rgba(0, 0, 255)',
                        'rgba(192, 192, 192)',
                        'rgba(255, 255, 0)',
                        'rgba(255, 0, 255)'],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(255, 0, 0)',
                        'rgba(0, 255, 0)',
                        'rgba(0, 0, 255)',
                        'rgba(192, 192, 192)',
                        'rgba(255, 255, 0)',
                        'rgba(255, 0, 255)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: { yAxes: [{ ticks: { beginAtZero: true } }] },
                legend: { display: false }
            },
        });
    </script>
</div>
