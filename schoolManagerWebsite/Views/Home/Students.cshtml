@{
    ViewData["Title"] = "Students";

}


<h1>Student Data</h1>

@model List<schoolDataMngmt.studentModel>

<table>
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>DOE</th>
        <th>Age</th>
        <th>Grade</th>
        <th>Pass</th>
    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.StudentId</td>
            <td>@student.fname</td>
            <td>@student.lname</td>
            <td>
                @Html.DisplayFor(modelItem => student.dateOfEnrollment)

            </td>
            <td>@student.age</td>
            <td>@student.grade</td>
            @if (student.passing == true)
            {
                <td>Passing</td>
            }
            else
            {
                <td>Failing</td>
            }

        </tr>
    }

</table>
<br />
<h3>Chart</h3>
<div Style="font-family: Corbel; font-size: small ;text-align:center " class="row">
    <div style="width:100%;height:100%">
        <canvas id="myChart" style="padding: 0;margin: auto;display: block; "> </canvas>
    </div>
</div>
